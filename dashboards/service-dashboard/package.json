{
  "name": "service-dashboard",
  "version": "1.0.0",
  "description": "Web application providing specialised interaction UI for the APIs presented by the node-microservices apps",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build:dev": "npm run clean && webpack --mode development",
    "build": "npm run clean && webpack --mode production",
    "start": "npm run build:dev && http-server"
  },
  "devDependencies": {
    "@chris-lewis/eslint-config": "^1.0.3",
    "fabricate.js": "^2.5.1",
    "http-server": "^14.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4"
  },
  "eslintConfig": {
    "extends": "@chris-lewis/eslint-config",
    "globals": {
      "fabricate": "readonly",
      "confirm": "readonly",
      "Constants": "readonly",
      "Theme": "readonly",
      "ConduitService": "readonly",
      "Utils": "readonly",
      "ClacksService": "readonly"
    }
  }
}
