{
  "name": "service-dashboard",
  "version": "1.0.0",
  "description": "Web application providing specialised interaction UI for the APIs presented by the node-microservices apps",
  "scripts": {
    "start": "python3 -m http.server"
  },
  "devDependencies": {
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3"
  },
  "eslintConfig": {
    "extends": "eslint-config-airbnb-base",
    "env": {
      "browser": true
    },
    "rules": {
      "no-multi-spaces": 0,
      "global-require": 0,
      "import/no-dynamic-require": 0,
      "no-await-in-loop": 0,
      "no-console": 0,
      "no-alert": 0,
      "no-param-reassign": [
        "error",
        { "props": false }
      ]
    },
    "globals": {
      "fabricate": "readonly",
      "fab": "readonly",
      "Theme": "readonly",
      "Colors": "readonly"
    }
  }
}
