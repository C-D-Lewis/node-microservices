{
  "include": ["src/**/*"],
  "exclude": ["src/types.ts"],
  "compilerOptions": {
    "target": "ES2016",
    "module": "ES2015",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext"
  }
}
