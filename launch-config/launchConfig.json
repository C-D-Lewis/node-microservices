{
  "notes": [
    "visuals used for OLED displays, not just LED lights",
    "crontab may also be running other things"
  ],
  "hosts": {
    "rack-gateway": [
      { "nms": "clacks"    },
      { "nms": "conduit"   },
      { "nms": "attic"     },
      { "nms": "concierge" },
      { "nms": "visuals"   },
      { "nms": "monitor"   },
      { "dir": "code/node-microservices/dashboard", "cmd": "npm run build && cd dist && http-server -p 54449" },
      { "dir": "code/microdiary",                   "cmd": "http-server -p 34279" },
      { "dir": "code/discord-bot-norren",           "cmd": "npm run build && node dist/src/index.js" }
    ],
    "rack-internal": [
      { "nms": "conduit" },
      { "nms": "attic"   },
      { "nms": "visuals" },
      { "nms": "monitor" }
    ],
    "rack-nas": [
      { "nms": "conduit" },
      { "nms": "attic"   },
      { "nms": "monitor" },
      { "dir": "code/node-microservices/tools/cirroc_oled", "cmd": "python3 main.py" }
    ],
    "rack-minecraft": [
      { "nms": "conduit" },
      { "nms": "attic"   },
      { "nms": "visuals" },
      { "nms": "monitor" },
      { "dir": "/mnt/ssd/docker-minecraft_dengie", "cmd": "./scripts/start-docker.sh dengie" },
      { "dir": "/mnt/ssd/docker-minecraft_hom", "cmd": "sleep 120 && ./scripts/start-docker.sh hom" }
    ],
    "bedroom-pi": [
      { "nms": "conduit" },
      { "nms": "attic"   },
      { "nms": "visuals" },
      { "nms": "monitor" }
    ],
    "desk-mote-pi": [
      { "nms": "conduit" },
      { "nms": "attic"   },
      { "nms": "visuals" },
      { "nms": "monitor" }
    ],
    "e-paper-witham": [
      { "nms": "conduit" },
      {
        "dir": "code/e-paper-dashboard",
        "cmd": "pip3 install spotipy termcolor && python3 main.py >> /home/pi/e-paper-dashboard.log 2>&1"
      }
    ],
    "e-paper-home": [
      { "nms": "conduit" },
      {
        "dir": "code/e-paper-dashboard",
        "cmd": "pip3 install spotipy termcolor && python3 main.py >> /home/pi/e-paper-dashboard.log 2>&1"
      }
    ],
    "eddie": [
      { "nms": "conduit" },
      { "nms": "attic"   }
    ],
    "mint-choc-chip": [
      { "nms": "conduit" },
      { "nms": "attic"   }
    ]
  }
