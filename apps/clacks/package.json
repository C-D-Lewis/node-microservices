{
  "name": "clacks",
  "version": "1.0.0",
  "description": "WebSockets server to enable clients to be reachable without knowing their IP.",
  "scripts": {
    "start": "node src/main.js",
    "kill": "sudo kill $(cat pid)",
    "test": "mocha tests/tests.js"
  },
  "author": "Chris Lewis",
  "dependencies": {
    "ws": "^8.2.3"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.2.1"
  },
  "eslintConfig": {
    "extends": "eslint-config-airbnb-base",
    "env": {
      "node": true,
      "mocha": true
    },
    "rules": {
      "no-multi-spaces": 0,
      "global-require": 0,
      "import/no-dynamic-require": 0,
      "no-await-in-loop": 0,
      "no-console": 0
    }
  }
}
