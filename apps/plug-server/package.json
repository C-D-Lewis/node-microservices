{
  "name": "plug-server",
  "version": "1.0.0",
  "description": "API for TP-Link smart plugs",
  "scripts": {
    "start": "node src/main.js",
    "kill": "sudo kill $(cat pid)",
    "test": "mocha tests/tests.js"
  },
  "author": "Chris Lewis",
  "dependencies": {
    "express": "^4.16.2",
    "tplink-smarthome-api": "^4.2.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^9.2.2"
  },
  "eslintConfig": {
    "extends": "eslint-config-airbnb-base",
    "env": {
      "node": true
    },
    "rules": {
      "no-multi-spaces": 0,
      "global-require": 0,
      "import/no-dynamic-require": 0,
      "no-await-in-loop": 0
    }
  }
}
