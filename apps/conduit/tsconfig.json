{
  "include": ["src/**/*"],
  "exclude": [
    "src/types.ts"
  ],
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true
  }
}
